<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="container">
         <div class="row search-banner px-3 py-3">
           <div class = "col-xs-12 col-sm-12 col-md-12">
             <label  for="contractor-search"><%= t('search_label') %></label>
             <div class="input-group">
               <input type="text" id="contractor-search" class="form-control" placeholder="<%=t('search_placeholder')%>" aria-label="Recipient's username" aria-describedby="basic-addon2">
               <div class="input-group-append">
                 <button class="btn btn-outline-secondary" type="button"><%= t("search") %></button>
               </div>
             </div>
           </div>
         </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-jobs"  role="tabpanel"  aria-labelledby="pills-jobs-tab">
      <div class="container">
      </div>
    </div>
    <div class="tab-pane fade" id="pills-profile"  role="tabpanel"  aria-labelledby="pills-profile-tab">
      <div class="container">
        <div class = "row no-gutters pt-3">
           <div class="col-md-3 bg-white grey-border">
             <div class = "row no-gutters">
               <div class="col-12 px-4 pt-4">
                 <img src="<%= image_url('img-profile.jpg') %>"   class="w-100" alt="Cinque Terre">
               </div>
             </div>
             <div class = "row no-gutters">
               <div class="col-12 px-4 py-3">
                 <h1 id= "profile-name"> Pierre <span class="last-name-tag mt-1">Gustavvson</span></h1>
                 <span id="job-description" class="lead">Azure Expert</span>

               </div>
             </div>
           </div>
          <div class="col-md-9 pt-4 bg-white grey-border">

          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-contact"  role="tabpanel"  aria-labelledby="pills-contact-tab">
      <div class="container">
      </div>
   </div>
   <div class="tab-pane fade" id="pills-messages" role="tabpanel"  aria-labelledby="pills-messages-tab">

       <%= render "chat_box" %>

   </div>
 </div>



