<div class="container">
  <div class="row">
    <div class="col-12">



      <% present(@user) do |user| %>
        <%= form_for user.freelancer, html: {:class => "mt-4"} do |form| %>

          <div class="wrapper p-3">
            <label class="wrapper-label">Menu 1</label>
            <div class="form-row">
              <div class="form-group mt-3 col-md-12">
                <%= form.label :headline %>
                <%= form.text_field :headline,  class: "form-control" %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group mt-3 col-md-12">
                <%= form.label :about_me %>
                <%= form.text_area :about_me, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <%= form.label :headline %>
              <%= form.text_field :headline,  class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= form.label :about_me %>
              <%= form.text_area :about_me, class: "form-control" %>
            </div>
          </div>
          <%= form.fields_for :educations do |education_fields| %>
            <div class="education-section">

              <h5 class="mt-4 mb-4">Education</h5>
              <div class="form-row">
                <div class="form-group col-md-12">
                  <%= education_fields.label :name %>
                  <%= education_fields.text_field :name, class: "form-control" %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

      <% end %>
    </div>
  </div>
</div>
