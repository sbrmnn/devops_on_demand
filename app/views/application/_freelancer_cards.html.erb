
  <% freelancers.each do |freelancer| %>
    <div class="col-md-3">
      <div class="card box-shadow">
        <img class="card-img-top" src = "<%= freelancer.profile_photo %>" style="height: 225px; width: 100%; display: block;">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h4><%= freelancer.user_name %></h4>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <p class="card-text"><%= freelancer.headline %></p>
          </div>
          <div class="mt-1 d-flex justify-content-between align-items-center">
            <p class="card-text"><b><%= freelancer.rate %></b></p>
          </div>
          <hr>
          <div class="mt-2 d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <a href="<%= freelancer.url %>" class="btn btn-sm btn-outline-secondary">View</a>
            </div>
            <span class="text-muted"><i class="fa fa-globe"></i> <%= freelancer.location %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
