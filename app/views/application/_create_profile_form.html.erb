<div class="jumbotron p-3 p-md-4 text-white rounded bg-info">
  <div class="col-md-9 px-0">
    <h1 class="display-4"><%= t('freelancer_registration_form') %></h1>
    <p class="lead my-3"><%= t('freelance_form_tagline') %></p>
  </div>
</div>
<div class="card shadow mt-3 freelancer-registration">
  <div class="card-body">
    <div class="container p-0">
      <div class="row">
        <div class="col-12">
          <div class="rounded">
            <% present(@user) do |user_presenter| %>
              <%= form_for [user_presenter.model, user_presenter.freelancer], :remote => true do |form| %>
                <h3 class="mb-4 py-2"><%= t('basic_info')%></h3>
                <div class="basic-info-nested-fields mb-2">
                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= form.label :headline %>
                      <%= form.text_field :headline, class: "form-control bg-orange whitesmoke-border" %>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group  col-12">
                      <%= form.label :about_me %>
                      <%= form.text_area :about_me, class: "form-control bg-orange whitesmoke-border" %>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= form.label :rate %>
                      <%= form.number_field :rate, class: "form-control bg-orange whitesmoke-border" %>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= form.label :location %>
                      <%= form.collection_select(:location, stripe_countries, "code", "country", {include_blank: 'Select Your Country'}, {:prompt => 'Select Country',class: "form-control"})%>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= form.label :profile_photo %>
                      <%= form.cl_image_upload(:profile_photo, {html: {class: "form-control"}} ) %>
                      <div class="mt-2 preview">
                      </div>
                    </div>
                  </div>
                </div>
                <h3 class="mb-4 py-2"><%= t('skills')%></h3>
                <div id='skills'>
                  <%= form.fields_for :skill  do |skill| %>
                    <%= render 'skills_fields', f: skill %>
                  <% end %>
                </div>
                <h3 class="mb-4 py-2"><%= t('certifications')%></h3>
                <div id='certifications' class="certifications-nested-fields">
                  <%= form.fields_for :certifications do |certification| %>
                    <%= render 'certification_fields', :f => certification %>
                  <% end %>
                  <div class='add-btn text-center'>
                    <%= link_to_add_association "#{t('add_cert_btn')}", form, :certifications, {class:"btn btn-lg btn-outline-dark"} %>
                  </div>
                </div>
                <h3 class="mb-4 py-2"><%= t('work_experiences')%></h3>
                <div id='work-experiences' class="work-experiences-nested-fields">
                  <%= form.fields_for :work_experiences do |work_experience| %>
                    <%= render 'work_experience_fields', :f => work_experience %>
                  <% end %>
                  <div class='add-btn text-center'>
                    <%= link_to_add_association "#{t('add_experience_btn')}", form, :work_experiences, {class:"btn btn-lg btn-outline-dark"} %>
                  </div>
                </div>
                <hr>
                <div class="card freelancer-error-card d-none mb-2">
                  <div class="card-header bg-danger text-light">
                    <%= t('form_error_msg') %>
                  </div>
                </div>
                <div class="card freelancer-success-card d-none mb-2">
                  <div class="card-header bg-success text-light">

                  </div>
                </div>
                <div class="pull-right">
                  <button class="preview-btn btn btn-link btn-lg"><%=t('preview')%></button>
                  <%= form.submit :class => "btn btn-primary btn-lg" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




