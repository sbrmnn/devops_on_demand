<% if @job.errors.messages.present? %>
  $(".credit-card-error.<%= @job.product_id %>").removeClass('d-none')
  $(".credit-card-success.<%= @job.product_id %>").addClass('d-none')
  $(".label-error-msgs").remove()
  <% @job.errors.try(:messages).try(:each) do |key, val| %>
     $(".new-job-form-<%= @job.product_id %>").find("label[for='job_<%= key.to_s %>']").append("<span class='text-danger label-error-msgs ml-1'><%= raw val.first %></span>")
  <% end %>
<% else %>
  $(".credit-card-error.<%= @job.product_id %>").addClass('d-none')
  $(".credit-card-success.<%= @job.product_id %>").removeClass('d-none')
  $("#job-form<%=@job.product_id%>").modal('hide');
  $(".new_job-<%=@job.product.id%>").html("<%= escape_javascript(render partial: 'new_job', locals: {user: @job.user, job: Job.new, product_rate: @job.product.rate , product_id: @job.product.id} ) %>")
<% end %>
$('.fa-spin').addClass('d-none')


