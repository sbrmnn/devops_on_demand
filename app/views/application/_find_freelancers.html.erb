<div class="container-fluid px-5 py-3">
  <%unless user_signed_in?%>
    <div>
      <h3 class="text-dark ml-1 ">Search for Engineers</h3>
    </div>
  <% end %>
  <%= form_tag("/freelancer_searches", remote: true ,method: "get") do %>
    <div class="input-group">
      <%= text_field_tag(:value, nil, class:"form-control", placeholder: t('search_placeholder'), name: "freelancer_searches[value]") %>
      <div class="input-group-append">
        <%= button_tag :submit, class: 'btn btn-dark' do %>
          <i class="d-none fa fa-circle-notch fa-spin mr-2"></i>Search
        <% end %>
      </div>
    </div>
    <div class="accordion mt-1" id="skillsAccordion">
      <% skill =  GetListOfSkillsFromFreelancers.call %>
      <% GetListOfSkillsFromFreelancers.call&.keys&.sort&.each_with_index do |k,i| %>
        <div class="card">
          <div class="card-header bg-light p-0" id="headingOne">
            <h5 class="mb-0">
              <button class="btn btn-link text-dark" type="button" data-toggle="collapse" data-target="#collapse<%= i %>" aria-expanded="true" aria-controls="collapseOne">
                Search by <%= k %> Experience
              </button>
            </h5>
          </div>
          <div id="collapse<%= i %>" class="collapse" aria-labelledby="headingOne" data-parent="#skillsAccordion">
            <div class="card-body p-1">
              <div class="d-flex flex-wrap">
                <% skill[k].each do |e| %>
                  <div class="m-2 p-1 rounded bg-light shadow-sm text-dark"><%= check_box_tag 'freelancer_searches[cloud_service_array][]', e[0], false, id: nil, class: 'mr-1' %>  <label><%=e[1]%></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



<div class="freelancer-search-results">
</div>

