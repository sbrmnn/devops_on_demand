<div class="container-fluid px-5 py-3">

    <div class="card">
      <div class="card-header">
        Past Hires
      </div>
      <ul class="list-group list-group-flush">
        <% UserPresenter.new(user).transactions.each do |t| %>
          <li class="list-group-item">
            <% product = t.product %>
            <div  class="mb-2 d-flex bars flex-row text-dark  rounded-0">
              <div class="port-item py-4 px-2 text-center flex-shrink-1" data-toggle="collapse" data-target="#home">

              </div>
              <div class="port-item px-2 py-4 w-100" data-toggle="collapse">
                <h6><%= product.user_name %></h6>
                <h5 class="font-weight-bold"><%= product.headline %></h5>
                <ul class="list-inline mb-1">
                  <li class="list-inline-item pb-1"><i class="fas fa-dollar-sign "></i><strong><%= "#{product.platform_rate} HOUR #{product.platform_rate * 8} DAY"%></strong></li>
                  <li class="list-inline-item pb-1"><strong><i class="fa mr-1 fa-envelope"></i><%= product.user.relay_user_name %></strong></li>
                  <li class="list-inline-item pb-1"><strong><i class="fa mr-1 fa-location-arrow"></i><%= ProductPresenter.new(product).full_name_location %></strong></li>
                </ul>



              </div>
            </div>
            <div class="message_box_product_<%= product.id %> d-none">
            </div>
            <div id="job-form<%=product.id%>" class="modal fade" tabindex="-1" role="dialog">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title w-75">Purchasing <%= product.user_name %> </h5>
                    <button type="button" class="btn btn-light btn-circle " data-dismiss="modal">X</button>
                  </div>
                  <div class="new_job-<%=product.id%>">
                    <%= render 'new_job', {user: current_user, job: Job.new, product_rate: product.platform_rate, product_id: product.id}  %>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
</div>