<div id="connection-error-alert" style="display: none;" class="text-center alert alert-danger" role="alert">
  <i class="fa fa-exclamation-triangle"></i>
  <strong class="ml-1 mr-1"><%= t('poor_connection_header') %></strong>
  <%= t('poor_connection_msg') %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<ul class="list-group">
  <% ChatroomPresenter.wrap(@user.chatrooms).each do |cp| %>
    <li class="list-group-item mb-2 list-group-item-action flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">List group item heading</h5>
        <small>3 days ago</small>
      </div>
      <p class="mb-1">Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.</p>
      <div class="d-flex w-100 justify-content-between">
      <span>
        <button data-chatroom="<%= cp.id %>" class="mt-2 view-messages-btn btn btn-light btn-sm" type="button" data-toggle="collapse" data-target="#collapse<%= cp.id %>" aria-expanded="false" aria-controls="#collapse<%= cp.id %>">
          <%= t('view_messages') %>
        </button>
      </span>
        <img class="chat-sender-image" src="https://via.placeholder.com/50">
      </div>
      <div class="collapse mt-3" id="collapse<%= cp.id %>">
        <div data-chatroom="<%= cp.id %>" class="chat-box chat-box-height bg-secondary">
        </div>
        <div class="chat-text-input bg-secondary chat-input-group-height">
          <div class="input-group msg-input-grp px-3">
            <input type="text" class="form-control write_msg" placeholder="Type a message and hit send" aria-label="Chat textbox"   >
            <div class="input-group-append">
              <button data-chatroom="<%= cp.id %>" class="msg_send_btn btn btn-outline-light"  type="button"  ><%= t('send') %></button>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<div class="accordion" id="accordionExample">
  <% ChatroomPresenter.wrap(@user.chatrooms).each do |cp| %>
    <div class="card shadow-sm rounded flex-row flex-wrap mt-2">
      <div class="d-flex bd-highlight">
        <div class="card-header p-2 flex-grow-1 bd-highlight">
          <img class="chat-sender-image" src="https://via.placeholder.com/75">
        </div>
        <div class="p-2 bd-highlight"><h4 class="card-title">Title</h4><p class="card-text m-0">Description</p></div>
        <div class="p-2 bd-highlight"><button class="pull-right see-messages-btn btn btn-outline-primary btn-sm" data-chatroom="<%= cp.model.id %>" data-toggle="collapse" data-target="#collapse<%= cp.model.id %>"
                                              aria-expanded="false" aria-controls="collapse<%= cp.model.id %>"><%=t('see_messages')%></button></div>
      </div>
    </div>
    <div id="collapse<%= cp.model.id %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div  >
          <div class="mb-2">
            <div class="chat-box chat-box-height bg-light  ">
            </div>
            <div class="chat-text-input bg-light chat-input-group-height">
              <div class="input-group msg-input-grp px-3 pt-2" style="display: none">
                <input type="text" class="align-middle form-control write_msg" placeholder="Type a message and hit send" aria-label="Chat textbox"   >
                <div class="input-group-append">
                  <button class="msg_send_btn btn btn-outline-secondary"  type="button"  ><%= t('send') %></button>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>


<div class="container-fluid p-0">
  <div class="row no-gutters">
      <div class="col-6 col-md-4">
        <div id="sidebar-wrapper" class="bg-dark chatsidebar-height sidebar p-3">
          <ul class="sidebar-nav">
            <% ChatroomPresenter.wrap(@user.chatrooms).each do |cp| %>
              <li class="chat_list" id = "chatroom_<%= cp.chatroom_id %>" >
                <div class="<%= cp.latest_message_type_for_user(current_user)%>  chatroom-list-elem" data-chatroom_id = "<%= cp.chatroom_id %>"><%= cp.participant_names_excluding_user(current_user) %></div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-6 col-md-8">
        <div class="chat-box chat-box-height bg-light px-3 pt-3">
          <p class="lead text-muted"><%= t('select_chatroom_msg') %></p>
        </div>
        <div class="chat-text-input bg-light chat-input-group-height">
          <div class="input-group msg-input-grp px-3 pt-2" style="display: none">
            <input type="text" class="align-middle form-control write_msg" placeholder="Type a message and hit send" aria-label="Chat textbox"   >
            <div class="input-group-append">
              <button class="msg_send_btn btn btn-outline-secondary"  type="button"  ><%= t('send') %></button>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>