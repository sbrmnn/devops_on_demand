<div class="py-3">
  <h1 class="display-4"><%= t('freelancer_registration_form') %></h1>
  <p class="lead text-muted"><%= t('freelance_form_tagline') %></p>
</div>
<div class="card shadow">
  <div class="card-body bg-orange">
    <div class="container p-0">
      <div class="row">
        <div class="col-12">
          <div class="rounded">
            <% present(@user) do |user| %>
              <%= form_for user.freelancer do |form| %>
                <div class="form-row">
                  <div class="form-group col-12">
                    <%= form.label :headline %>
                    <%= form.text_field :headline,  class: "form-control bg-orange whitesmoke-border" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group mt-3 col-12">
                    <%= form.label :about_me %>
                    <%= form.text_area :about_me, class: "form-control bg-orange whitesmoke-border" %>
                  </div>
                </div>
                <hr class="hr-text" data-content="<%= t('certifications')%>">
                <%= form.fields_for :certification  do |certification| %>
                  <%= render 'certification_fields', f: certification %>
                  <div class="form-row justify-content-center mt-3">
                    <a id="add-more-cert-btn" class="btn btn-outline-info text-info">+ Add more certifications</a>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



