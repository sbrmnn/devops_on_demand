<div id="billing" class="card">
  <div class="card-body">
    <div class="container p-0">
      <div class="row">
        <div class="col-12">
          <div class="rounded">
            <% present(@user) do |user_presenter| %>
              <%= form_with(html: {id: 'billing-form'}, model: @freelancer = user_presenter.freelancer, url: [user_presenter.model, @freelancer], remote: true) do |form| %>

                <div class="row pull-center">
                  <div class="col-md-4">

                    <div class="well">

                      <div class="row card">
                      </div>

                      <br/>

                      <div class="row-fluid">
                        <div class="col-md-8">
                          <div class="form-group">
                            <label>Credit Card Number </label>
                            <input type="text" name="number" class="form-control" />
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Expiration</label>

                            <input type="text" placeholder="MM/YY" name="expiry" class="form-control" />

                          </div>
                        </div>
                      </div>

                      <div class="row-fluid">
                        <div class="col-md-8">
                          <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control" />
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">

                            <label>CVV </label>

                            <input type="text" name="cvv" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="pull-right">
                        <button class="preview-btn btn btn-link btn-lg"><%=t('preview')%></button>
                        <%= form.submit :class => "btn btn-primary btn-lg" %>
                      </div>
                    </div>
                  </div>
                </div>


              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



