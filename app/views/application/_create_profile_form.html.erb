<div class="container">
  <div class="row">
    <div class="col-12">

      <h3 class = "mt-4">Create Freelance Profile</h3>

      <% present(@user) do |user| %>
        <%= form_for user.freelancer, html: {:class => "mt-4"} do |form| %>

          <div class="form-row mt-3">
            <div class="form-group col-md-12">
              <%= form.label :headline %>
              <%= form.text_field :headline,  class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group mt-3 col-md-12">
              <%= form.label :about_me %>
              <%= form.text_area :about_me, class: "form-control" %>
            </div>
          </div>




          <%= form.fields_for :educations do |education_fields| %>
            <div class="education-section">
              <div class="wrapper my-4">
                <div class="text-center header">
                  <p class="wrapper-label">Education</p>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-12">
                  <%= education_fields.label :name %>
                  <%= education_fields.text_field :name, class: "form-control" %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

      <% end %>
    </div>
  </div>
</div>
