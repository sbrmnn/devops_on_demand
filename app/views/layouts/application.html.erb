<!DOCTYPE html>
<html>
  <head>
    <title>DevopsOnDemand</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% unless login_or_registration_page? %>

      <nav class="navbar navbar-expand-lg navbar-light mb-3">
        <div class="container">
          <a class="navbar-brand" href="#">YumFog</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="nav nav-pills ml-2" id="pills-tab" role="tablist">
              <li class="nav-item">
                <a class="nav-link" id="pills-freelancers-tab" data-toggle="pill" href="#pills-freelancers" role="tab" aria-controls="pills-freelancers" aria-selected="false"><%= t("find_freelancers") %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true"><%= t("jobs") %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"><%= t("profile") %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false"><%= t("contact") %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="pills-messages-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-messages" aria-selected="false"><%= t("messages") %></a>
              </li>
            </ul>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to( t('signup'), new_registration_path('user'), class: "nav-link")  %>
              </li>
              <li class="nav-item">
                <%= link_to( t('login'), new_user_session_path, class: "nav-link")  %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

  <%end%>



  <div class="container page-container">
  <%= yield %>
  </div>

  <!-- Footer -->
  <% unless login_or_registration_page? %>

      <footer class="py-1 bg-secondary ">
        <div class="container">
          <p class="m-0 text-center text-white"><%= t('copyright')%> </p>
        </div>
        <!-- /.container -->
      </footer>

  <% end %>
  </body>
</html>
