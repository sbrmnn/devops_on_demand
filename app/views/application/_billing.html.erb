
   <div  class="card">
    <div class="card-body">
      <div class="container p-0">
      <% present(user) do |user_presenter| %>
        <%= form_with(model: user_presenter.credit_card, url: "/users/#{user_presenter.id}/credit_cards", html: {id: "payment-form"}, remote: true) do |f| %>
            <h2 class="pt-3"><%=t('credit_card_form') %></h2>
            <hr class="mb-2">
            <h4 class="bg-light mb-4 pt-3 pl-2 pb-3 blackborder"><%= t('card_info')%></h4>
          <%= f.hidden_field  :token, id: "credit-card-token" ,class: :'form-control' %>
          <div class="form-row mt-1">
            <div class="col-md-6 form-group">
              <label>Card Holder Name</label>
              <%= f.text_field :name, id: 'credit-card-name' ,class: 'form-control'  %>
            </div>
          </div>
          <div class="form-row pt-2">
            <div class="col-md-12 form-group">
              <label>Credit or Debit Card</label>
              <div id="card-element" class="form-control">
                <!-- A Stripe Element will be inserted here. -->
              </div>
              <div id="card-errors" role="alert"></div>
            </div>
          </div>

          <h4 class="bg-light mb-4 pt-3 pl-2 pb-3 mt-2 blackborder"><%= t('billing_address')%></h4>

          <div class="form-row">
            <div class="col-md-6 form-group">
              <label>Address Line 1</label>
              <%= f.text_field :line1, id: 'credit-card-line1',  class: 'form-control'  %>
            </div>
            <div class="col-md-6 form-group">
              <label>Address Line 2 </label>
              <%= f.text_field :line2, id: 'credit-card-line2' ,class: 'form-control' %>
             </div>
          </div>

          <div class="form-row">
            <div class="col-md-6 form-group">
              <label>City</label>
              <%= f.text_field :city, id: 'credit-card-city' ,class: 'form-control'  %>
            </div>
            <div class="col-md-6 form-group">
              <label>State/Province</label>
              <%= f.text_field :state, id: 'credit-card-state' ,class: 'form-control'  %>
            </div>
          </div>

          <div class="form-row">
            <div class="col-md-6 form-group">
              <label>Zip</label>
              <%= f.text_field :zip, id: 'credit-card-zip', class: 'form-control'  %>
            </div>
            <div class="col-md-6 form-group">
              <label>Country</label>
              <%= f.select(:country, stripe_countries, {include_blank: 'Select Your Country'}, {:prompt => 'Select Country', id: 'credit-card-country', class: "form-control"})%>
            </div>
          </div>

          <hr>

          <div class="card credit-card-error-card d-none  mb-2">
            <div class="card-header bg-danger text-light">
              <%= t('form_error_msg') %>
            </div>
          </div>
          <div class="card credit-card-success-card d-none mb-2">
            <div class="card-header bg-success text-light"><%= t('saved') %></div>
          </div>

          <div class="pull-right">
            <%= f.submit  id: 'credit-card-form-submit-btn', :class => "btn btn-primary btn-lg" %>
          </div>
          <% end %>
      <% end %>
         </div>
      </div>
      </div>







