<div id="new-job" class="card">
  <div class="card-body">
    <div class="container p-0">
      <div class="row">
        <div class="col-12">
          <div class="rounded">
            <%= form_with(model: [@user, @job], remote: true) do |form| %>
              <div class="basic-info-nested-fields mb-2">
                <div class="form-row">
                  <div class="form-group col-12">
                    <%= form.label :description %>
                    <%= form.text_area :description, class: "form-control  whitesmoke-border" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-12">
                    <%= form.label :hours %>
                    <%= form.text_field :hours, class: "form-control  whitesmoke-border" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-12">
                    <%= form.label :from %>
                    <%= form.text_field :from, class: 'form-control work-experience-from', "data-provide":'datepicker', id: nil %>
                  </div>
                  <div class="form-group col-12">
                    <%= form.label :to %>
                    <%= form.text_field :to, class: 'form-control work-experience-to', "data-provide":'datepicker', id: nil %>
                  </div>
                </div>
              </div>
              <hr>

              <div class="pull-right">
                <%= form.submit :class => "btn btn-primary btn-lg " %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




